.content{
    height:300rpx;

}
.inner{
    display:flex;
    flex-direction:row;
    height:300rpx;
    width:900rpx;
}
.movie-item{
    display:flex;
    flex-direction:column;
    width:180rpx;
    margin:10rpx;
}
.movie-item image{
    width:180rpx;
    height:250rpx;

}
.movie-item text{
    text-align:left;
    overflow:hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
}
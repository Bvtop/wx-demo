/*正在上映部分*/
.board{
    box-sizing:border-box;
    background-color:#f6f6f6;
}
.board-item{
    /*display:flex 默认情况下，横向排列*/
    display:flex;
    /*需要单独设置让他纵向排列*/
    flex-direction:column;
    /*cursor:pointer;*/
    font-size:20rpx;
    margin:40rpx 0;
    padding:20rpx;
    background-color:#fff;
}
.board-item .title{
    display:flex;
    margin-bottom:10rpx;
    width:100%;
}
.board-item .title text{
    flex:1;

}

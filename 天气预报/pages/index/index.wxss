/**index.wxss**/
.content{
    font-family: 微软雅黑，宋体;
    font-size: 14px;
    background-size: cover;
    height: 100%;
    width: 100%;
    background-image: url("../img/bg.png");
    color: #fff;
}
.info{
    padding: 20px;
    background: #fff;
    background: rgba(0, 0, 0, 0.5);
    box-shadow: 10px 10px 20px rgba(0, 0, 0,0.5);

}
.today{
    padding-top: 50rpx;
    height: 50%;
}
.city{
    font-size: 16px;
    color: #fff;
    text-align: right;
    margin-right: 10rpx;
    margin-top: 30rpx;
}
.temp{
    font-size: 50px;
    text-align: center;
}
.weather{
    text-align: center;
}
.future{
    display: flex;
    flex-flow: row wrap;
    text-align: center;
    padding-top: 10rpx;
    padding-bottom: 20rpx;
}
.future-item{
    min-height: 100%;
    width: 30%;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: 1px solid coral;
    border-radius: 10px;
    margin-top: 30rpx;

}
.future-item view{
    margin-top: 10px;
}